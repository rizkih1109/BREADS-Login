<%- include('../partials/header') %>
    <div>
        <div class="head">
            <h1>SQLite Bread (Browse, Read, Edit, Add, Delete) and Pagination</h1>
        </div>
        <div>
            <form action="/" method="get">
                <input type="hidden" name="page" value="1">
                <div>
                    <label for="name">Title</label>
                    <input type="text" name="title" placeholder="Insert your title" value="<%= query.title %>" /><br>
                </div>
                <div>
                    <label for="deadline">Deadline</label>
                    <div>
                        <input type="date" name="startdate" value="<%= query.startdate %>" /><span>s.d.</span>
                        <input type="date" name="enddate" value="<%= query.enddate %>" /><br>
                    </div>
                </div>
                <div>
                    <label for="Complete">Complete</label>
                    <% if(query.complete=='true' ) { %>
                        <select name="complete">
                            <option disabled> -select complete- </option><br>
                            <option value="true" selected>Done</option>
                            <option value="false">Not Yet</option>
                        </select>
                        <% } else if (query.complete=='false' ) { %>
                            <select name="complete">
                                <option disabled> -select complete- </option><br>
                                <option value="true">Done</option>
                                <option value="false" selected>Not Yet</option>
                            </select>
                            <% } else { %>
                                <select name="complete">
                                    <option disabled selected> -select complete- </option><br>
                                    <option value="true">Yes</option>
                                    <option value="false">Not Yet</option>
                                </select>
                                <% } %>
                </div>
                <div style="display: block;">
                    <legend>Operation</legend>
                    <div>
                        <% if(query.mode=='OR' ) { %>
                            <input type="radio" id="or" name="mode" value="OR" checked>
                            <label for="or" style="width: 30px; margin-left: 0px;">OR</label>
                            <input type="radio" id="and" name="mode" value="AND">
                            <label for="and" style="width: 30px; margin-left: 0px;">AND</label>
                            <% } else if(query.mode=='AND' ) { %>
                                <input type="radio" id="or" name="mode" value="OR">
                                <label for="or" style="width: 30px; margin-left: 0px;">OR</label>
                                <input type="radio" id="and" name="mode" value="AND" checked>
                                <label for="and" style="width: 30px; margin-left: 0px;">AND</label>
                                <% } else { %>
                                    <input type="radio" id="or" name="mode" value="OR" checked>
                                    <label for="or" style="width: 30px; margin-left: 0px;">OR</label>
                                    <input type="radio" id="and" name="mode" value="AND">
                                    <label for="and" style="width: 30px; margin-left: 0px;">AND</label>
                                    <% } %>
                    </div>
                </div>
                <div style="clear: both;">
                    <button type="submit" class="b1">Search</button><a href="/" class="btn">Reset</a>
                </div>
            </form>
        </div>
        <table>
            <thead>
                <tr>
                    <th> No.</th>
                    <th> Title</th>
                    <th> Complete </th>
                    <th> Deadline </th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach((item, index)=> { %>
                    <tr>
                        <td>
                            <%= index + offset + 1 %>
                        </td>
                        <td>
                            <%= item.title %>
                        </td>
                        <td>
                            <%= item.complete? "Done" : "Not Yet" %>
                        </td>
                        <td>
                            <%= moment(item.deadline).locale('id').format('Do MMM YYYY LT') %>
                        </td>
                        <td><a href="/edit/<%= item.id %>" class="b2">Update</a><button class="b3"
                                onclick="on('<%= item.id %>', '<%= item.name %>')">Delete</button></td>
                    </tr>
                        <% }) %>
            </tbody>
        </table>
        <div class="foot">
            <div style="display: inline-block;">
                <a href="/users/add" class="b4">Add</a>
            </div>
            <div class="pages">
                <% if(page=='1' ) { %>
                    <a href="<%= url.replace(`page=${page}`, `page=${page}`) %>">&laquo;</a>
                    <% } else { %>
                        <a href="<%= url.replace(`page=${page}`, `page=${page - 1}`) %>">&laquo;</a>
                        <% } %>
                            <% for(let i=1; i <=pages; i++) { %>
                                <% if(url.includes("page=")) { %>
                        <% if (i == page) { %>
                            <a href=" <%=url.replace(`page=${page}`, `page=${i}`) %>" class="active"><%= i %></a>
                                        <% } else { %>
                                            <a href="<%= url.replace(`page=${page}`, `page=${i}`) %>">
                                                <%= i %>
                                            </a>
                                            <% } %>
                                                <% } else { %>
                                                    <% if (i==page) { %>
                                                        <a href="/?page=<%= i %>">
                                                            <%= i %>
                                                        </a>
                                                        <% } else { %>
                                                            <a href="/?page=<%= i %>">
                                                                <%= i %>
                                                            </a>
                                                            <% } %>
                                                                <% } %>
                                                                    <% } %>
                                                                        <% if(page==pages) { %>
                                                                            <a
                                                                                href="<%= url.replace(`page=${page}`, `page=${page}`) %>">&raquo;</a>
                                                                            <% } else { %>
                                                                                <a
                                                                                    href="<%= url.replace(`page=${page}`, `page=${(page * 1) + 1}`) %>">&raquo;</a>
                                                                                <% } %>
            </div>
        </div>
    </div>
    <div class="notif" id="notif">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Delete Confirmation</h4>
                    <p class="close" onclick="off()">&times;</p>
                </div>
                <div class="modal-body">
                    <p id="ask"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="b6" onclick="off()">No</button>
                    <a id="nextdelete" class="btn1" href="#">Yes</a>
                </div>

            </div>
        </div>
    </div>
    </div>
<%- include('../partials/footer') %>